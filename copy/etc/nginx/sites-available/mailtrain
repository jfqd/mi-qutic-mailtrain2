# Upstreams
upstream trusted {
  server 127.0.0.1:3000;
}
upstream sandbox {
  server 127.0.0.1:3003;
}
upstream public {
  server 127.0.0.1:3004;
}

# Redirect Options
server {
listen 80;
  server_name localhost;
  # enforce https
  return 301 https://$server_name$request_uri;
}

# HTTPS Server trusted
server {
  listen               8443 ssl;
  server_name          localhost;
  # access_log           /var/log/nginx/mailtrain.access.log main;
  # error_log            /var/log/nginx/mailtrain.error.log;
  ssl_certificate      /etc/nginx/ssl/mailtrain.crt;
  ssl_certificate_key  /etc/nginx/ssl/mailtrain.key;
  ssl_protocols        TLSv1.1 TLSv1.2;
  client_max_body_size 25M;
  location / {
    proxy_pass http://trusted;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forward-Proto https;
    proxy_set_header X-Nginx-Proxy true;
    proxy_redirect off;
  }
}
# HTTPS Server sandbox
server {
  listen               8444 ssl;
  server_name          localhost;
  # access_log           /var/log/nginx/mailtrain.access.log main;
  # error_log            /var/log/nginx/mailtrain.error.log;
  ssl_certificate      /etc/nginx/ssl/mailtrain.crt;
  ssl_certificate_key  /etc/nginx/ssl/mailtrain.key;
  ssl_protocols        TLSv1.1 TLSv1.2;
  client_max_body_size 25M;
  location / {
    proxy_pass http://sandbox;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forward-Proto https;
    proxy_set_header X-Nginx-Proxy true;
    proxy_redirect off;
  }
}
# HTTPS Server public
server {
  listen               8445 ssl;
  server_name          localhost;
  # access_log           /var/log/nginx/mailtrain.access.log main;
  # error_log            /var/log/nginx/mailtrain.error.log;
  ssl_certificate      /etc/nginx/ssl/mailtrain.crt;
  ssl_certificate_key  /etc/nginx/ssl/mailtrain.key;
  ssl_protocols        TLSv1.1 TLSv1.2;
  client_max_body_size 25M;
  # v1 image path, uncomment if migration from v1 to v2
  # location /mosaico/uploads/static {
  #   alias /var/www/mailtrain/client/static/mosaico/uploads/static/;
  # }
  location / {
    proxy_pass http://public;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forward-Proto https;
    proxy_set_header X-Nginx-Proxy true;
    proxy_redirect off;
  }
}

server {
  listen 127.0.0.1;
  server_name localhost;
  location /nginx_status {
    stub_status on;
    access_log   off;
    allow 127.0.0.1;
    deny all;
  }
}